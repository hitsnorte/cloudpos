generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model Subfamilia {
  id   Int    @id @default(autoincrement())
  nome String @db.VarChar(255)

  @@map("subfamilia")

}

model Cloud_product {
  id           Int    @id @default(autoincrement())
  product_name String @db.VarChar(255)
  quantity     Int


  @@map("Cloud_product")
}

model Cloud_family {
  id          Int    @id @default(autoincrement())
  family_name String @db.VarChar(100)

  @@map("cloud_family")
}

model Cloud_family_subfamilia {
  id              Int @id @default(autoincrement())
  id_cloud_family Int
  id_subfamilia   Int

  @@index([id_cloud_family])
  @@index([id_subfamilia])
  @@map("cloud_family_subfamilia")
}

model Cloud_groups {
  id         Int    @id @default(autoincrement())
  group_name String @db.VarChar(100)

  @@map("cloud_groups")
}

model Cloud_product_relation {
  id               Int @id @default(autoincrement())
  cloud_product_id Int
  id_subfamilia    Int

  @@unique([cloud_product_id, id_subfamilia], map: "unique_product_subfamily")
  @@index([cloud_product_id])
  @@index([id_subfamilia])
  @@map("cloud_product_relation")

}
